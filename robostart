start

startup-core=core-on
main-startup=robo-on
do-{startup-core,main-startup}
if {legs-point==front} indinend shoot
clean=fan-inverted,foward-until-bump,turn-on-bumb
function install()
shell.run("pastebin get ctrKq5tS os8/assets/BCGet")
shell.run("pastebin get ctrKq5tS BCGet")
fs.makeDir("os8/data")
fs.makeDir("os8/photos")
shell.run("BCGet help")
shell.run("BCGet ResponseKit")
shell.run("BCGet UIKit")
shell.run("BCGet usersettings")
shell.run("BCGet core")
fs.move("ResponseKit","os8/apis/ResponseKit")
fs.move("UIKit","os8/apis/UIKit")
fs.move("usersettings","os8/apis/usersettings")
fs.move("core","os8/apis/core")
shell.run("cd os8/assets")
shell.run("BCGet appStore")
shell.run("BCGet loadbground")
shell.run("BCGet photos")
shell.run("BCGet update")
shell.run("BCGet bground")
shell.run("BCGet calcIcon")
shell.run("BCGet filesIcon")
shell.run("BCGet helpIcon")
shell.run("BCGet photosIcon")
shell.run("BCGet settings")
shell.run("BCGet settingsIcon")
shell.run("BCGet shellIcon")
shell.run("BCGet storeIcon")
shell.run("BCGet storeIcon2")
shell.run("BCGet storeIcon3")
shell.run("BCGet storeIcon4")
shell.run("BCGet storeIcon5")
shell.run("BCGet updateIcon")
shell.run("BCGet wbground")
shell.run("BCGet startup")
shell.run("BCGet sample1")
shell.run("BCGet filem")
shell.run("BCGet filembground")
fs.move("sample1", "os8/photos/sample1")
fs.move("appStore","os8/assets/appStore")
fs.move("loadbground","os8/assets/loadbground")
fs.move("bground","os8/assets/bground")
fs.move("calcIcon","os8/assets/calcIcon")
fs.move("filesIcon","os8/assets/filesIcon")
fs.move("helpIcon","os8/assets/helpIcon")
fs.move("photosIcon","os8/assets/photosIcon")
fs.move("settings","os8/assets/settings")
fs.move("settingsIcon","os8/assets/settingsIcon")
fs.move("shellIcon","os8/assets/shellIcon")
fs.move("storeIcon","os8/assets/storeIcon")
fs.move("storeIcon2","os8/assets/storeIcon2")
fs.move("storeIcon3","os8/assets/storeIcon3")
fs.move("storeIcon4","os8/assets/storeIcon4")
fs.move("storeIcon5","os8/assets/storeIcon5")
fs.move("updateIcon","os8/assets/updateIcon")
fs.move("wbground","os8/assets/wbground")
fs.move("update","os8/assets/update")
fs.move("photos","os8/assets/photos")
fs.move("help","os8/assets/help")
fs.move("filem","os8/assets/filemanager/files")
fs.move("filembground","os8/assets/filemanager/bground")
end
term.clear()
term.setTextColor(colors.white)
term.setCursorPos(20,1)
print("OS8 Installer")
term.setCursorPos(20,7)
print("INSTALL OS8")
while true do
local event, button, x, y = os.pullEvent("mouse_click")
if button ==1 and x>=20 and x<=31 and y==7 then
install()
term.clear()
term.setCursorPos(1,1)
print("Done! Rebooting...")
sleep(2)
os.reboot()
else
os.reboot()
end
end
